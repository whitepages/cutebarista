<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <TextView android:text="@string/top_title" android:textColor="@color/top_text_color" android:gravity="center" android:textSize="32dp" android:layout_marginTop="10dp" android:id="@+id/TextView01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp"></TextView>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:gravity="center_horizontal" android:layout_marginBottom="20dp">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button_cute" android:src="@drawable/ca_cute_48" android:layout_marginRight="10dp"></ImageButton>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ca_not_48" android:id="@+id/button_not_cute" android:layout_marginLeft="10dp"></ImageButton>
    </LinearLayout>
    <TextView android:text="@string/bottom_title" android:textColor="@color/top_text_color" android:layout_marginBottom="10dp" android:gravity="center" android:textSize="32dp" android:id="@+id/bottom_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp"></TextView>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button_find_cute" android:src="@drawable/ca_find_48" android:layout_gravity="center"></ImageButton>
</LinearLayout>
